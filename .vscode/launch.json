{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "apps/flask-api/app.py",
                "FLASK_DEBUG": "1",
                "FLASK_CONFIG_PATH": "config.json",
                "MODAL_CONFIG_PATH": ".modal.toml",
                "GOOGLE_APPLICATION_CREDENTIALS": "service_account.json",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4318"
            },
            "args": ["run", "--no-debugger", "-p 8000"],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Safety Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "dramatiq",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "FLASK_CONFIG_PATH": "config.json",
                "MODAL_CONFIG_PATH": ".modal.toml",
                "GOOGLE_APPLICATION_CREDENTIALS": "service_account.json",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4318"
            },
            "args": ["-p", "1", "-t", "1", "src.safety_queue.set_up_safety_queue:set_up_safety_queue", "src.safety_queue.video_safety_handler", "--watch", "src/safety_queue"],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Alembic Auto-generate Debug Migration",
            "type": "debugpy",
            "request": "launch",
            "module": "alembic",
            "args": ["revision", "-m", "\"debug\"", "--autogenerate"],
            "envFile": "${workspaceFolder}/.env.local"
        },
        {
            "name": "Python Debugger: Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "-s"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
